<div class="layout">
  <div class="layout__cell layout__cell--aside wings">
    {% embed "partials/author.twig" with { "item": item } %}
    {% endembed %}
  </div>
  <div class="layout__cell gutters  post-body">
    {% embed "partials/label.twig" with { "articleType": item.articleType } %}
    {% endembed %}

    {% for block in item.contentBlocks %}
      {% if( block.type == "paragraph") %}
        {{ block.content | raw }}
      {% elseif( block.type == "header") %}
        {{ block.content | raw }}
      {% elseif( block.type == "media") %}
      {% else %}
        {{ block.content | raw }}
      {% endif %}
    {% endfor %}


<figure class="hero{% if item.isCrowned == true %} is-crowned{% endif %}" style="background-image: url('{{ item.image }}');">
  <img class="image image--stretch" width="899" height="506" alt="" src="{{ item.image }}" />
  <a class="anchor anchor--shy" href="{{ route('post', {id: item._id}) }}" style="block">
    <figcaption class="hero__headline">
      <div class="headline wings">
        <h1 class="anchor title gutters{% if item.headline | length > 30 %} title--lead{% else %} title--headline{% endif %}">{{ item.headline }}</h1>
        {% if item.label[0]|length>0 %}
        <p class="gutters leader body--whisper">{{ item.about|raw}}</p>
        {% endif %}
        <span class="posting__anchor anchor gutters">Read more</span>
        {% if item.label[0]|length>0 %}
        <em class="headline__tax"><span class="label">{{ item.label[0] }}</span></em>
        {% endif %}
      </div>
    </figcaption>
  </a>
</figure>

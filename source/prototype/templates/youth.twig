<!DOCTYPE html>
<html lang="{{ locale }}">
  {% embed "partials/head.twig" with { title: 'YOUTH â€“ A CTA DOSSIER', locale: locale } %}
  {% endembed %}

  <body class="theme--gold">
    {% embed "partials/masthead--youth.twig" %}
    {% endembed %}

    {% embed "partials/hero.twig" with {item: feature} only %}
    {% endembed %}

    <section class="layout">
      <div class="layout__cell layout__cell--aside wings">
        <aside class="gutters leader--hero">
          <!-- Jasper: hier een lijstje van beschikbare channels -->

        </aside>
      </div>
      <div class="layout__cell wing--right">

        {% for article in articles | slice(0,1) %}
        <a class="anchor anchor--shy" href="{{ route('post', {id: article._id}) }}">
          <article class="posting posting--hero layout layout--even leader trailer">
            <figure class="posting__image layout__cell gutters">
              <img class="image image--stretch" width="899" height="506" alt="" src="{{ resize(article.link.mediaObject[0].external.data.url, 600, 400) }}" />
            </figure>
            <div class="posting__content layout__cell gutters">
              <em class="label">Youth in agriculture</em>
              <h3 class="title title--lead">{{ article.headline}}</h3>
              <p class="posting__intro">{{ article.about | raw }}</p>
              <span class="posting__anchor anchor">Read more</span>
            </div>
          </article>
        </a>
        {% endfor %}

        <div class="grid grid--channels">
          {% for article in articles | slice(1,4) %}
          <a class="grid__cell anchor anchor--shy" href="{{ route('post', {id: article._id}) }}">
              <article class="posting posting--tile gutters">
                <div class="posting__image layout__cell">
                  <img class="image image--stretch" width="899" height="506" alt="" src="{{ resize(article.link.mediaObject[0].external.data.url, 600, 400) }}" />
                </div>
                <div class="posting__content layout__cell">
                  <h3 class="posting__title title">{{article.headline}}</h3>
                  <p class="posting__intro">{{article.about | raw}}</p>
                  <span class="posting__anchor anchor">Read more</span>
                </div>
              </article>
            </a>
          {% endfor %}
        </div>


      </div>
    </section>

    <section class="wings well">
      <h2 class="title title--lead title--section gutters">More on Youth in agriculture</h2>
      <div class="grid grid--stories">
        <ul class="reset grid__cell">
          {% for article in articles | slice(5,5) %}
          <li class="grid__cell gutters leader--tiny  trailer--tiny">
            <div class="posting posting--row">
              <div class="posting__image  gutter-right">
                <img class="image image--stretch" width="300" height="200" alt="" src="{{ resize(article.link.mediaObject[0].external.data.url, 300, 200) }}" />
              </div>
              <div class="posting__content gutters">
                <h3 class="posting__title title">{{ article.headline }}</h3>
                <div class="posting__intro">{{ article.about | raw}}</div>
                <a class="posting__anchor" href="{{ route('post', {id: article._id}) }}">Read more</a>
              </div>
            </div>
          </li>
          {% endfor %}
        </ul>
        <ul class="reset grid__cell">
          {% for article in articles | slice(10,5) %}
          <li class="grid__cell gutters leader--tiny trailer--tiny">
            <div class="posting posting--row">
              <div class="posting__image  gutter-right">
                <img class="image image--stretch" width="300" height="200" alt="" src="{{ resize(article.link.mediaObject[0].external.data.url, 300, 200) }}" />
              </div>
              <div class="posting__content gutters">
                <h3 class="posting__title title">{{ article.headline }}</h3>
                <div class="posting__intro">{{ article.about | raw}}</div>
                <a class="posting__anchor" href="{{ route('post', {id: article._id}) }}">Read more</a>
              </div>
            </div>
          </li>
          {% endfor %}
        </ul>
      </div>
    </section>


  </body>
</html>
